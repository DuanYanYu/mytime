/* pages/calendar/calendarGroup.wxss */
page {
  height: 100%;
  width: 100%;
}
.calContainer {
  height: 100%;
  display: flex;
  flex-direction: row;
  padding: 0;
  box-sizing: border-box;
  background-color: #f2f2f2;
}

.calLeft {
    border-right:2px solid yellow;
    width:100px;
}

.calContent {
    -webkit-flex: 1;
    flex:1;
    position:relative;
}

.calContainerLeft{
    height: 100%;
    display: flex;
    flex-direction: column;
    padding: 0;
    box-sizing: border-box;
    background-color: #cfcfcf;
}
.calToday{
    height:50px;
    line-height: 50px;
    text-align: center;
    align-content: center;
    vertical-align: center;
    border-bottom: 2px solid #ccc;
    background-color: #fff333;
}